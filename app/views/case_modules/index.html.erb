<%= render partial: "layouts/header" %>
<div class='form-style-5'>
  <p id="notice"><%= notice %></p>

  <h1>Módulos</h1>

  <%= form_tag(case_modules_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <div class="button-style">
        <%= submit_tag 'Buscar', name: nil %>
      </div>
  <% end %>

	<%if !current_user.student? %>
    <%= link_to image_tag("ico13.png"), new_case_module_path %>
  <%end%>

  <div class="model_items">
    <p style='text-align: center; font-size: 12px; margin: 12px 0px 0px 0px;'><i>Clique na imagem para visualizar o módulo.</i></p>
    <ol>
      <% @case_modules.each do |case_module| %>
        <li>
          <% div_id = "#{case_module.id}" -%>
          <div class='clinic_case_item', id="<%= div_id -%>">
            <a href="/case_modules/<%= div_id -%>">
              <div class='item_image'>
                <div class="item_image_inner">
                  <%= image_tag(case_module.thumbnail) if case_module.image.attached? %>  
                </div>
              </div>

              <div class='separator_line'></div>
              
              <div class='item_description'>
                <div class='item_description_title'>
                  <%= case_module.title %>
                </div>
                <pre> <%= case_module.description %> </pre>
              </div>
            </a>
          </div>
        </li>
      <% end%>
    </ol>    
  </div>
  <br>
</div>