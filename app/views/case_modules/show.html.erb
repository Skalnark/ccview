<%= render partial: "layouts/header" %>
<div class='form-style-5'>
  <p id="notice"><%= notice %></p>
  <h1 style='text-align: center;'> Módulo </h1>

  <p>
    <h2><u><%= @case_module.title %></u></h2>
  </p>
  
  <p>
    <strong>Descrição do módulo:</strong>
  </p>
  <pre><%= @case_module.description %></pre>

  <div class="image_button">
    <p style='text-align: left; font-size: 12px; margin-bottom: 6px;'>
      <i>Clique na imagem para aumentar sua resolução.</i>
    </p>
    <%= link_to image_case_module_path(@case_module) do %>
      <%= image_tag(@case_module.thumbnail) if @case_module.image.attached? %>
    <% end %><br>
  </div>
  
  <p>
    <strong>Autor(es):</strong>
    <%= @case_module.author %>
  </p>

  <p>
    <strong>Dicionário:</strong>
  </p>
  <table>
    <thead>
      <tr>
        <th>Termo</th>
        <th>Descrição</th>
      </tr>
    </thead>

    <tbody>
      <% @case_module.dictionaries.each do |dictionary| %>
        <tr>
          <td><%= dictionary.term %></td>
          <td><%= dictionary.description %></td>
        </tr>
      <% end %>
    </tbody>
    
</table>
  
  <div class="actions">
    <%if !current_user.student? %>
      <%= link_to 'Editar Módulo', edit_case_module_path(@case_module) %>
      <%= link_to 'Novo Assunto', new_case_module_topic_path(@case_module) %>
    <%end%>  
    <%= link_to 'Visualizar Assuntos', case_module_topics_path(@case_module)%>
    <%= link_to 'Voltar', case_modules_path %>
  </div>
</div>