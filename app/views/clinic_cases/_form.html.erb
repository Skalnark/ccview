<%= form_for([@topic, @clinic_case]) do |form| %>
  <% if clinic_case.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(clinic_case.errors.count, "error") %> impediram esse Caso Cl√≠nico de ser salvo:</h2>

      <ul>
      <% clinic_case.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "#{@clinic_case.current_step}_step", :form => form %>

  <div class="actions">
    <div class="button-style">
      <%= form.submit "Anterior", :name => "back_button" unless @clinic_case.first_step? %>
    </div>

    <% if @clinic_case.first_step?%>
      <%= form.button :submit do %>
        <%= image_tag("ico05.png")%>
      <% end %>

    <%else%>
      <%= form.button :submit do %>
        <%= image_tag("ico01.png")%>
      <% end %>
    <%end%>

  </div>
<% end %>
