<%= render partial: "layouts/header" %>
<div class='form-style-5'>
  <p id="notice"><%= notice %></p>

  <h1>Casos Clínicos</h1>

  <%= form_tag(clinic_cases_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Search', name: nil %>
  <% end %>

  <% @clinic_cases.each do |clinic_case| %>
    <table>
      <thead>
        <tr>
          <th>
            <%= clinic_case.title %>
          </th>
          <th>Descrições do caso</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <tr>
            <% clinic_case.images.each do | image | %>
              <td><%= image_tag(image, :class => "image")%></td>
            <% end%>
            <td><%= clinic_case.description %></td>
            <td>
              <%= link_to 'Exibir', clinic_case %><br>
              <%= link_to 'Editar', edit_clinic_case_path(clinic_case) %><br>
              <%= link_to 'Apagar', clinic_case, method: :delete, data: { confirm: 'Deseja mesmo apagar?' } %>
              <br>
            </td>
          </tr>
      </tbody>
    </table>
  <% end%>
  <br>

  <%= link_to 'Novo Caso Clínico', new_clinic_case_path %>
</div>