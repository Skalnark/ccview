<%= render partial: "layouts/header" %>
<div class='form-style-5'>
  <%= form_with(model: dictionary, local: true) do |form| %>
    <% if dictionary.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(dictionary.errors.count, "erro") %> Erro ao salvar o dicionário:</h2>

        <ul>
        <% dictionary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      Termo: <%= form.text_field :Term %>
    </div>

    <div class="field">
      Descrição: <%= form.text_area :Description %>
    </div>

    <div class="actions">
      <%= form.submit "Salvar" %>
    </div>
    
    <div class="actions">
      <%= link_to 'Voltar', dictionaries_path %>
    </div>
  <% end %>
</div>