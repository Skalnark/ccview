<%= form_for([@module, @topic]) do |form| %>
  <% if topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic.errors.count, "error") %> proibiram esse Assunto de ser salvo:</h2>

      <ul>
      <% topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <br>
  <% end %>

  <%= render "#{@topic.current_step}_step", :form => form %>

  <div class="actions">
    <div class="button-style">
      <%= form.submit "Anterior", :name => "back_button" unless @topic.first_step? %>  
    </div>

    <% if @topic.first_step?%>
      <%= form.button :submit do %>
        <%= image_tag("ico05.png")%>
      <% end %>

    <% else %>
      <%= form.button :submit do %>
        <%= image_tag("ico01.png")%>
      <% end %>
    <%end%>
  </div>
<% end %>
