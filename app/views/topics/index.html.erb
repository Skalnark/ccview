<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Authors</th>
      <th>About</th>
      <th>Casemodule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.description %></td>
        <td><%= topic.authors %></td>
        <td><%= topic.about %></td>
        <td><%= link_to 'Show', case_module_topic_path(@module, topic) %></td>
        <td><%= link_to 'Edit', edit_case_module_topic_path(@module, topic) %></td>
        <td><%= link_to 'Destroy', [@module, topic], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_case_module_topic_path(@module) %> <br>
<%= link_to 'Back', case_module_path(@module) %>