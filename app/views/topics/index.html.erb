<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Authors</th>
      <th>About</th>
      <th>Casemodule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @Topic.each do |topic| %>
      <% if(:case_module_id == @module.id) %>
        <tr>
          <td><%= topic.title %></td>
          <td><%= topic.description %></td>
          <td><%= topic.authors %></td>
          <td><%= topic.about %></td>
          <td><%= topic.caseModule %></td>
          <td><%= link_to 'Show', case_module_topic_path(@case_module, topic) %></td>
          <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
          <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_case_module_topic_path %>
