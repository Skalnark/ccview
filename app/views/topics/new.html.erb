<%= render partial: "layouts/header" %>
<div class='form-style-5'>
	<h1>Novo Assunto</h1>

	<% if !current_user.student? %>
		<%= render 'form', topic: @topic %>
		<div class="actions">
	  		<%= link_to image_tag("ico04.png"), case_module_topics_path(@module) %>
	  	</div>
	<%else%>
		<div class="actions">
			Você não possui autorização para adicionar um novo assunto.
			<br>
			<br>
			<%= link_to image_tag("ico04.png"), case_module_topics_path(@module) %>
		</div>
	<%end%>
</div>
